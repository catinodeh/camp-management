@model List<CampManagement.Domain.Entities.Guardian>
@{
    ViewBag.Title = "Active Guardians";
    Layout = "~/Views/Shared/_LayoutCommunication.cshtml";
}

<section class="panel">
    <header class="panel-heading"> DataTables <i class="fa fa-info-sign text-muted" data-toggle="tooltip" data-placement="bottom" data-title="ajax to load the data." data-original-title="" title=""></i> </header>
    <div class="table-responsive">
        <table data-ride="datatables" class="table table-striped m-b-none">
            <thead>
                <tr>
                    <th><input type="checkbox" id="chkAll" checked="checked" style="height: 12px" /></th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Email confirmed ?</th>
                    <th>Added on</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var guardian in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="Id" checked="checked" data-email="@guardian.Email" data-name="@guardian.Name" value="@guardian.GuardianId" style="height: 12px" />
                        </td>
                        <td>@guardian.Name</td>
                        <td>@guardian.Email</td>
                        <td>@(guardian.EmailConfirmed == true ? "Yes" : "No")</td>
                        <td>@(guardian.CreatedDate.ToString("d"))</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="5">
                        <button id="btnEmailForm" class="btn btn-info pull-right" type="button" data-toggle="modal" data-target="#emailform"><i class="fa fa-external-link-square"></i>&nbsp;Compose Email</button>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</section>