@{
    Layout = null;
}

<style>
    .camper {
        padding-left: 15px;
    }
</style>

<section class="panel">
    <header class="panel-heading font-bold"></header>
    <div class="panel-body">
        <div class="row valign">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-9 col-lg-11">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search for Guardians or Campers" id="txtCriteria" />
                        </div>
                    </div>
                    <div class="col-sx-1 col-lg-1 pull-right">
                        <button type="submit" class="btn btn-default" id="btnSearch">
                            <i class="fa fa-search text"></i>
                            Search
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="row">
    <div class="col-lg-5 col-md-5 col-xs-12">
        <section class="panel" id="pnSearch" style="display: none">
            <header class="panel-heading font-bold">Search Results</header>
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-12 control-label">* Select a Guardian and check at least one Camper</label>
                    <div class="col-sm-12" id="searchResult">
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="col-lg-7 col-md-7 col-xs-12">
        <section class="panel" style="display: none" id="pnSetup">
            <header class="panel-heading font-bold">Current Setup</header>
            <div class="panel-body">
                <div class="form-group" id="setupContent">
                    
                </div>
            </div>
        </section>
    </div>
</div>

<script src="@Url.Content("~/js/registration.js")"></script>