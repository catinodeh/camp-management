@model CampManagement.Domain.Entities.Registration

@{
    ViewBag.Title = "<i class='fa fa-sitemap'></i>&nbsp;Registration Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-12">
    <section class="panel">
        <header class="panel-heading bg-light">
            <ul class="nav nav-tabs pull-right">
                <li class="active">
                    <a href="#search" data-toggle="tab"><i class="fa fa-search text-default"></i> Search</a>
                </li> 
                <li>
                    <a href="#data" data-toggle="tab"><i class="fa fa-user text-default"></i> Data</a>
                </li>
                <li>
                    <a href="#payments" data-toggle="tab"><i class="fa fa-cog text-default"></i> Payments</a>
                </li>
            </ul> 
            <span class="hidden-sm">@Html.Raw(Model == null || Model.RegistrationId == 0 ? "New" : "Edit") Registartion</span> 
        </header>
        <div class="panel-body">
            <div class="tab-content">
                <div class="tab-pane active" id="search">
                    @{ Html.RenderPartial("~/Views/Registrations/ManageSearch.cshtml"); }
                </div>
                <div class="tab-pane" id="data">profile</div>
                <div class="tab-pane" id="payments">settings</div>
            </div>
        </div>
    </section>
    
</div>