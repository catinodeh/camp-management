@model CampManagement.Domain.Entities.Registration

@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading text-right bg-light">
                <ul class="nav nav-tabs pull-left">
                    <li class="active">
                        <a href="#guardian_@Model.GuardianId.Value" data-toggle="tab">
                            <i class="fa fa-user text-default"></i> Guardian
                            &nbsp;@if (Model?.Guardian.EmailConfirmed == true)
                            { <i style="color:green" class='fa fa-check-circle'></i>  }
                            else
                            { <i style='color:red' class='fa fa-exclamation-circle' title='Email not confirmed'></i> }
                        </a>
                    </li>
                    @if (Model?.Campers != null)
                    {
                        foreach (var camper in Model.Campers)
                        {
                            <li class="">
                                <a href="#camperSetup_@camper.Camper.CamperId" data-toggle="tab">
                                    <i class="fa fa-@(camper.Camper.Gender == "M" ? "male" : "female") text-default"></i> @camper.Camper.FirstName
                                </a>
                            </li>
                        }
                    }
                </ul>
                <span class="hidden-sm">Tap fields to copy content</span>
            </header>
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane fade active in" id="guardian_@Model.GuardianId.Value">
                        @{ Html.RenderPartial("~/Views/Guardians/DetailForms.cshtml", Model.Guardian); }
                    </div>
                    @if (Model?.Campers != null)
                    {
                        foreach (var camper in Model.Campers)
                        {
                            <div class="tab-pane fade" id="camperSetup_@camper.Camper.CamperId">
                                Developing...
                            </div>
                        }
                    }
                </div>
            </div>
        </section>
    </div>
</div>