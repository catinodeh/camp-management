@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Camp Management | Login</title>
    <meta name="description" content="app, web app, responsive, admin dashboard, admin, flat, flat ui, ui kit, off screen nav" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/css/animate.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/css/font-awesome.min.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/css/font.css")" type="text/css" cache="false" />
    <link rel="stylesheet" href="@Url.Content("~/css/plugin.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/css/app.css")" type="text/css" />
    <!--[if lt IE 9]>
      <script src="@Url.Content("~/js/ie/respond.min.js")" cache="false"></script>
      <script src="@Url.Content("~/js/ie/html5.js")" cache="false"></script>
      <script src="@Url.Content("~/js/ie/fix.js")" cache="false"></script>
    <![endif]-->
</head>
<body>
    <section id="content" class="m-t-lg wrapper-md animated fadeInUp">
        <a class="nav-brand" href="#">New Life</a>
        <div class="row m-n">
            <div class="col-md-4 col-md-offset-4 m-t-lg">
                <section class="panel">
                    <header class="panel-heading text-center">
                        Sign in
                    </header>
                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="panel-body" role="form">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.RememberMe) Keep me logged in
                            </label>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-2">
                                <button type="submit" class="btn btn-info">Sign in</button>
                            </div>
                            <div class="col-lg-10">
                                @Html.ActionLink("Forgot your password?", "ForgotPassword", "Account", null, new { @class = "pull-right m-t-xs" })
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </section>
    <!-- footer -->
    <footer id="footer">
        <div class="text-center padder clearfix">
            <p>
                <small>All Rights Reserved<br>&copy; 2016</small>
            </p>
        </div>
    </footer>
    <!-- / footer -->
    <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
    <!-- Bootstrap -->
    <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.js")"></script>
    <!-- app -->
    <script src="@Url.Content("~/js/app.js")"></script>
    <script src="@Url.Content("~/js/app.plugin.js")"></script>
    <script src="@Url.Content("~/js/app.data.js")"></script>
</body>
</html>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
